---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Xwin - Casino Online">
	<Navbar />
	
	<main>
		<!-- Hero Section -->
		<section class="min-h-screen flex items-center justify-center bg-gradient-to-b from-white to-gray-50 pt-16">
			<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h1 class="text-5xl md:text-6xl font-bold text-secondary mb-6">
					Convierte tus <span class="text-primary">Xcoins</span> en ganancias reales
				</h1>
				<p class="text-xl text-gray-600 mb-8">
					Juega, multiplica, ¡y gana hoy mismo!
				</p>
				<a href="#play" class="inline-block bg-primary text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-opacity-90 transition-all transform hover:scale-105">
					Jugar ahora
				</a>
				<a href="#register" class="inline-block bg-primary text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-opacity-90 transition-all transform hover:scale-105">Registrate</a>
			</div>
		</section>

		<!-- About Section -->
		<section id="about" class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-4xl font-bold text-center text-secondary mb-12">
					Descubre <span class="text-primary">Xwin</span>
				</h2>
				<div class="grid md:grid-cols-3 gap-8">
					{[
						{
							title: "Recarga",
							description: "Inicia con Xcoins y prepárate para la diversión"
						},
						{
							title: "Juega",
							description: "Disfruta de nuestros emocionantes juegos"
						},
						{
							title: "Gana",
							description: "Multiplica tus Xcoins y retira tus ganancias"
						}
					].map(item => (
						<div class="bg-gray-50 p-8 rounded-2xl text-center shadow-lg transition-all hover:translate-y-2 ">
							<h3 class="text-2xl font-bold text-secondary mb-4">{item.title}</h3>
							<p class="text-gray-600">{item.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- How to Win Section -->
		<section id="how-to-win" class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-4xl font-bold text-center text-secondary mb-12">
					Cómo ganar dinero con <span class="text-primary">Xwin</span>
				</h2>
				<div class="grid md:grid-cols-3 gap-8">
					{[
						{
							step: "1",
							title: "Recarga tus Xcoins",
							description: "Elige tu método de pago preferido y comienza"
						},
						{
							step: "2",
							title: "Juega y diviértete",
							description: "Explora nuestra variedad de juegos emocionantes"
						},
						{
							step: "3",
							title: "Retira tus ganancias",
							description: "Convierte tus Xcoins en dinero real"
						}
					].map(item => (
						<div class="relative bg-white p-8 rounded-2xl shadow-md">
							<span class="absolute -top-4 left-4 bg-primary text-white w-8 h-8 rounded-full flex items-center justify-center">
								{item.step}
							</span>
							<h3 class="text-xl font-bold text-secondary mb-2">{item.title}</h3>
							<p class="text-gray-600">{item.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section id="play" class="py-20 bg-secondary text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-4xl font-bold mb-6">¡No pierdas más tiempo!</h2>
				<p class="text-xl mb-8">Inicia sesión y comienza a ganar</p>
				<a href="#" class="inline-block bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-opacity-90 transition-all transform hover:scale-105">
					Entrar a jugar
				</a>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-white py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-3 gap-8 text-center md:text-left">
					<div>
						<span class="text-2xl font-bold text-primary">Xwin</span>
						<p class="mt-2 text-gray-600">Tu casino online de confianza</p>
					</div>
					<div>
						<h3 class="font-semibold text-secondary mb-4">Enlaces</h3>
						<ul class="space-y-2 text-gray-600">
							<li><a href="#" class="hover:text-primary">Términos y condiciones</a></li>
							<li><a href="#" class="hover:text-primary">Política de privacidad</a></li>
							<li><a href="#" class="hover:text-primary">Contacto</a></li>
						</ul>
					</div>
					<div>
						<h3 class="font-semibold text-secondary mb-4">Síguenos</h3>
						<div class="flex justify-center md:justify-start space-x-4">
							<a href="#" class="text-gray-600 hover:text-primary">Twitter</a>
							<a href="#" class="text-gray-600 hover:text-primary">Facebook</a>
							<a href="#" class="text-gray-600 hover:text-primary">Instagram</a>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t text-center text-gray-600">
					<p>&copy; {new Date().getFullYear()} Xwin. Todos los derechos reservados.</p>
				</div>
			</div>
		</footer>
	</main>
</Layout>